<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    환경톡톡 게시글 Mapper.xml
    @author : yukyeong
    @fileName : EnvMapper.xml
    @since : 250711
    @history
     - 250711 | yukyeong | 게시글 전체 목록 조회, 게시글 단건 조회 기능 추가
     - 250714 | yukyeong | 게시글 등록, 삭제, 수정 기능 추가
-->

<mapper namespace="com.ecovery.mapper.EnvMapper">

    <!--
        게시글 전체 목록 조회 쿼리
        · 대상 테이블 : env (게시글), member (작성자)
        · 조인 방식 : INNER JOIN (member_id 기준)
        · 조회 컬럼 : 게시글 정보 + 작성자 닉네임
        · 용도 : 목록 화면 출력
    -->
    <select id="getList" resultType="com.ecovery.domain.EnvVO">
        SELECT
            e.env_id,
            e.member_id,
            e.title,
            e.content,
            e.view_count,
            e.created_at,
            e.updated_at,
            m.nickname
        FROM env e
        JOIN member m ON e.member_id = m.member_id
    </select>

    <!--
        게시글 단건 조회 쿼리
        · 대상 테이블 : env (게시글), member (작성자)
        · 조인 방식   : INNER JOIN (member_id 기준)
        · 조회 컬럼   : 게시글 정보 + 작성자 닉네임
        · 용도        : 상세 화면 조회
    -->
    <select id="read" resultType="com.ecovery.domain.EnvVO">
        SELECT
            e.env_id,
            e.member_id,
            e.title,
            e.content,
            e.view_count,
            e.created_at,
            e.updated_at,
            m.nickname
        FROM env e
        JOIN member m ON e.member_id = m.member_id
        WHERE e.env_id = #{envId}
    </select>


    <!--
        게시글 등록 쿼리
        · 대상 테이블 : env
        · 입력 컬럼 : member_id, title, content
        · 용도 : 신규 게시글 저장
    -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="envId">
        INSERT Into env (
                         member_id,
                         title,
                         content
        ) values (
                  #{memberId},
                  #{title},
                  #{content}
                         )
    </insert>


    <!--
    게시글 삭제 쿼리
    · 대상 테이블 : env
    · 조건 : envId (PK)
    · 용도 : 게시글 1건 삭제
    -->
    <delete id="delete">
        DELETE FROM env
        WHERE env_id = #{envId}
    </delete>


    <!--
    게시글 수정 쿼리
    · 대상 테이블 : env
    · 수정 컬럼 : title, content, updated_at
    · 조건 : env_id (PK)
    · 용도 : 게시글 내용 수정
    -->
    <update id="update">
        UPDATE env
        set
            title = #{title},
            content = #{content},
            updated_at = now()
        where env_id = #{envId}
    </update>

</mapper>