{{>layouts/header}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">EMAIL</th>
            <th scope="col">PASSWORD</th>
        </tr>
    </thead>
    <tbody>
        {{! HTML 안에서 변수를 출력하거나 반복/조건을 처리할 수 있도록 도와줌 }}
        {{#memberList}}
        <tr>
            <th>{{id}}</th>
            <td><a href="members/{{id}}">{{email}}</a></td>
            <td>{{password}}</td>
        </tr>
        {{/memberList}}
    </tbody>
</table>

<a href="/members/new">New Member</a>

{{>layouts/footer}}