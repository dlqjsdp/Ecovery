{{>layouts/header}}

<!-- action : 이 url에 정보를 보내겠다 / method : post 또는 get 속성 값으로 보내겠다 -->
<form class="container" action="/articles/create" method="post">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" name="title" class="form-control"> <!-- name="title" : DTO title 필드와 연결 -->
    </div>

    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" name="content" rows="3"></textarea> <!-- name="content" : DTO content 필드와 연결 -->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles">Back</a>
</form>

{{>layouts/footer}}